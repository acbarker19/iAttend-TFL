<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iAttend</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-logo">
                <a class="navbar-logo-link" asp-controller="Home" asp-action="Index">
                    <img id="navbar-logo-image" src="~/resources/images/iAttend-Logo-White.svg" />
                    <span id="navbar-logo-text">iAttend</span>
                </a>
            </div>
            <div class="navbar-links">
                <a asp-controller="Home" asp-action="Attendance" asp-route-accountType='A'>Attendance</a>
                <a asp-controller="Home" asp-action="Account" asp-route-accountType='A'>My Account</a>
            </div>
        </nav>
    </header>
    <main role="main">

        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - iAttend - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div class="navbar-links">
            <span>Demo Navigation</span>
            <a asp-controller="Home" asp-action="ChangePassword">ChangePassword</a>
            <a asp-controller="Home" asp-action="CreateAccount">CreateAccount</a>
            <a asp-controller="Home" asp-action="EditAnAccount">EditAnAccount</a>
            <a asp-controller="Home" asp-action="EditMyAdminAccount">EditMyAdminAccount</a>
            <a asp-controller="Home" asp-action="FacultyAttendance">FacultyAttendance</a>
            <a asp-controller="Home" asp-action="Index">Index</a>
            <a asp-controller="Home" asp-action="Login">Login</a>
            <a asp-controller="Home" asp-action="ManageAccounts">ManageAccounts</a>
            <a asp-controller="Home" asp-action="MyAccount">MyAccount</a>
            <a asp-controller="Home" asp-action="MyAdminAccount">MyAdminAccount</a>
            <a asp-controller="Home" asp-action="RequestNewPassword">RequestNewPassword</a>
            <a asp-controller="Home" asp-action="StudentAttendance">StudentAttendance</a>
            <a asp-controller="Home" asp-action="TransferAdmin">TransferAdmin</a>
            <a asp-controller="Accounts" asp-action="Index">Accounts in the DB</a>
            <a asp-controller="Home" asp-action="Login">Logout</a>
        </div>
    </footer>
    @if (IsSectionDefined("scripts"))
    {
        RenderSection("scripts");
    }
</body>
</html>