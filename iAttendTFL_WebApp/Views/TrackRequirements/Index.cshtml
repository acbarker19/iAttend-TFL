@model IEnumerable<iAttendTFL_WebApp.Models.track_requirement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.num_required)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.track)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requirement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.num_required)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.track.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.requirement.id)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { requirement_id = item.requirement_id, track_id = item.track_id }) |
                @Html.ActionLink("Details", "Details", new { requirement_id = item.requirement_id, track_id = item.track_id }) |
                @Html.ActionLink("Delete", "Delete", new { requirement_id = item.requirement_id, track_id = item.track_id })
            </td>
        </tr>
}
    </tbody>
</table>
