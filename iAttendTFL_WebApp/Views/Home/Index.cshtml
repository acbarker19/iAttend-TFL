@{
    ViewData["Title"] = "Home";
}
<style>
    main {
        padding: 5px 5% 5px 5%;
    }

    body {
        background: rgb(85,22,168);
        background: linear-gradient(125deg, rgba(85,22,168,1) 25%, rgba(180,61,207,1) 100%);
    }
</style>
<div class="row" style="margin-top: 125px;">
    <div class="col-md-6">
        <img src="~/resources/images/iAttend-Home-Design.svg" width="500" style="z-index: -1;"/>
    </div>
    <div class="border-div">
        <h1 style="line-height: 0.7em;">Track Your</h1>
        <h1 style="line-height: 0.7em;">Attendance</h1>
        <p class="homepage-subtext">iAttend makes it easy to track attendance at any event you are attending or hosting.</p>
        <input type="text" placeholder="Email address" style="width: 400px;"/>
        <button>Get started</button>
        <p class="subtext">Already using iAttend? <a href="">Sign in</a>.</p>
    </div>
</div>