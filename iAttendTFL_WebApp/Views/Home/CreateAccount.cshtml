@{
    ViewData["Title"] = "CreateAccount";
}
<br />
<br />
<div style="text-align:center">
    <h2>Create An Account</h2>
    <br />
    <br />
    <form id="formCreateAccount">
        <p>Enter the following infromation to create your iAttend account. Once you submit the information, you will recieve a confirmation email.</p>
        
        <p>First Name: <input id="inputFirstName" placeholder="Example: Matthew" required /></p>
        
        <p>Last Name: <input id="inputLastName" placeholder="Example: Dutt" required /></p>
        
        <p>Expected Graduation Date: <input id="inputExpectedGraduationDate" placeholder="Example: 2020" required /></p>

        <label for="selectTrack">Select your track:</label>
        <select id="selectTrack" required>
            <option value="musicEducation">Music Education</option>
            <option value="musicBA">Music BA</option>
            <option value="musicMinor">Music Minor</option>
        </select>
       
        <span>Email: <input id="inputEmail" placeholder="Example: someone@email.edu" required /></span>
            <span class="subText">You must use your Mount Union email.</span>
        
        <span>Password: <input id="inputPassword" type="password" required /></span>
            <span class="subText">Passwords must be at least 8 characters, with one captial, one special character, and one number.</span>
        
        <span>Confirm Password: <input id="inputConfirmPassword" type="password" required /></span>
            <span class="subText">Make sure to type out your new password the exact same way in the "Confirm Password" box.</span>
        
        <input id="submitCreateAccount" type="submit" value="Create Account" />
        <!--<button onclick="createAccount();">Create Account</button>-->
    </form>
    
    <!--After the account verification link is clicked, this page will be reloaded, with this message unhidden and the form hidden.-->
    <h4 hidden>Account Creation Successful</h4>
    
    <br />
    <br />
</div>